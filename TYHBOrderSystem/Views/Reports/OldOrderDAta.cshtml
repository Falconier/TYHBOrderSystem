@model IEnumerable<TYHBOrderSystem.Models.Order>


@{
				ViewBag.Title = "OldOrderData";
}

<link rel="stylesheet" href="~/Assets/dist/css/adminlte.min.css" />


<form asp-controller="Data" asp-action="OldOrderData" method="get">
				<div class="form-row">
								<div class="form-group col-md-4">
												SEARCH BY:
																				<div class="form-group col-md-10">
																								@Html.RadioButton("searching", "1", true) [Customer First-Name]
																								<br />@Html.RadioButton("searching", "2") [Customer Last-Name]
																								<br />@Html.RadioButton("searching", "3") [Order-Date]
																								<br />@Html.RadioButton("searching", "4") [Pickup-Date]
																		<!--		<br />Html.RadioButton("searching", "5") [Order-ID]
																								<br />Html.RadioButton("searching", "6") [Employee-ID]-->
																								<br />@Html.RadioButton("searching", "7") [Employee Last-Name]
																								<br />@Html.RadioButton("searching", "8") [Employee First-Name]
																								<br />@Html.RadioButton("searching", "9") [Product Flavor]
																				</div>
												<p>
																<input type="text" name="searchString">
																<input type="submit" class="btn btn-secondary" value="Filter"/>
												</p>

								</div>
				</div>
</form>




