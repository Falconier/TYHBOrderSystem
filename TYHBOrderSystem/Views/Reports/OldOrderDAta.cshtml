																</td>
																<td>
																				@Html.DisplayFor(model => item.PRODUCT)
																</td>
																<td>
																				@Html.DisplayFor(model => item.Order_Date)
																</td>
																<td>
																				@Html.DisplayFor(model => item.PickUp_Due_Date)
																</td>
																<td>
																				@Html.DisplayFor(model => item.ORDER_ID)
																</td>
																<td>
																				@Html.DisplayFor(model => item.Finishing_ID)
																</td>
												</tr>
								}
				</tbody>
</table>


