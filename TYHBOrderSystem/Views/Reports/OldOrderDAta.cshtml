@model IEnumerable<TYHBOrderSystem.Models.Order>


@{
				ViewBag.Title = "OldOrderData";
}

<link rel="stylesheet" href="~/Assets/dist/css/adminlte.min.css" />
<form asp-controller="Data" asp-action="OldOrderData" method="get">
				<div class="form-row">
								<div class="form-group col-md-4">
												SEARCH BY:
												<div class="form-group col-md-10">
																@Html.RadioButton("searching", "1", true) Customer First-Name
																@Html.RadioButton("searching", "2") Customer Last-Name
																@Html.RadioButton("searching", "3") Product
																@Html.RadioButton("searching", "4") Order-Date
																@Html.RadioButton("searching", "5") Pickup-Date
																@Html.RadioButton("searching", "6") OrderID
																@Html.RadioButton("searching", "7") FinishingID
												</div>
												<p>
																<input type="text" name="searchString">
																<input type="submit" class="btn btn-secondary" value="Filter"/>
												</p>

								</div>
				</div>
</form>




