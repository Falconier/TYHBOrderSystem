@model IEnumerable<TYHBOrderSystem.Models.Order>


@{
				ViewBag.Title = "Daily Report";

}

<link rel="stylesheet" href="~/Assets/dist/css/adminlte.min.css" />



<!-- NEED ORDER DATA TO PULL FROM DATABASE-->
<h3>DAILY Report</h3>

<table id="InformationTable" class="table table-bordered">
				<tr>
								<th>
												[Orderplaced-Info]
								</th>
								<th>
												[Pickup-Info]
								</th>
								<th>
												[Product-Info]
								</th>
								<th>
												[Customer-Info]
								</th>
								<th>
												[Employee-Info]
								</th>
				</tr>

				@if (Model.Count() > 0)
				{
								foreach (var item in Model)
								{
												<tr>
																<td>
																				(Order Date)<br />
																				@Html.DisplayFor(model => item.Order_Date)<br />
																				(Order Time)<br />
																				@Html.DisplayFor(model => item.Order_Time)<br />
																				(Order-ID)<br />
																				@Html.DisplayFor(model => item.ORDER_ID)
																</td>
																<td>
																				(Pickup Date)<br />
																				@Html.DisplayFor(model => item.PickUp_Due_Date)<br />
																				(Pickup Time)<br />
																				@Html.DisplayFor(model => item.PickUp_Time)<br />
																				(Order-ID)<br />
																				@Html.DisplayFor(model => item.ORDER_ID)
																</td>
																<td>
																				(Product-ID)<br /> @Html.DisplayFor(model => item.PRODUCT.ProductId)<br />
																				(Flavor)<br />
																				@Html.DisplayFor(model => item.PRODUCT.Product_Flavor)
																				<br />(Description)<br />
																				@Html.DisplayFor(model => item.PRODUCT.Product_Description)

																</td>
																<td>
																				(Customer Name)<br />
																				@Html.DisplayFor(model => item.CUSTOMER.Customer_First_Name)
																				@Html.DisplayFor(model => item.CUSTOMER.Customer_Last_Name)
																				<br />(Info)<br />
																				@Html.DisplayFor(model => item.CUSTOMER.Contact_Number)
																				<br />@Html.DisplayFor(model => item.CUSTOMER.Email_Address)
																				<br />@Html.DisplayFor(model => item.CUSTOMER.Alternate_Contact_Number)

																</td>
																<td>
																				(Employee Name)<br />
																				@Html.DisplayFor(model => item.EMPLOYEE.Emp_First_Name)
																				@Html.DisplayFor(model => item.EMPLOYEE.Emp_Last_Name)
																				<br />(Employee-ID)<br />
																				@Html.DisplayFor(model => item.EMPLOYEE.Employee_ID)
																</td>
												</tr>
								}
				}
				else
				{
								<h2>NO-ORDERS-PRESENT</h2>
				}
</table>


@section Scripts{
				<script>
								function sortTable(n) {
												var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
												table = model.getElementById("InformationTable");
												switching = true;
												dir = "asc";

												while (switching) {
																switching = false;
																rows = table.rows;

																for (i = 1; i < (rows.length - 1); i++) {

																				shouldSwitch = false;

																				x = rows[i].getElementsByTagName("TD")[n];
																				y = rows[i + 1].getElementsByTagName("TD")[n];

																				if (dir == "asc") {
																								if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
																												shouldSwitch = true;
																												break;
																												break;
																								}
																				} else if (dir == "desc") {
																								if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {

																												shouldSwitch = true;
																												break;
																								}
																				}
																}
																if (shouldSwitch) {

																				rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
																				switching = true;
																				switchcount++;
																} else {
																				if (switchcount == 0 && dir == "asc") {
																								dir = "desc";
																								switching = true;
																				}
																}
												}
								}
				</script>
}